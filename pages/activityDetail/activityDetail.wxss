}

.fix-bottom-box .order-btn {
    width: 300rpx;
    height: 84rpx;
    background: linear-gradient(360deg, rgba(4, 203, 121, 1) 0%, rgba(73, 220, 142, 1) 100%);
    border-radius: 8rpx;
    font-size: 34rpx;
    color: rgba(255, 255, 255, 1);
}

.price-box {}

.price-box .price-now {
    font-size: 36rpx;
    font-weight: 700;
    color: rgba(252, 84, 3, 1);
}

.price-box .price-old {
    padding-left: 22rpx;
    font-size: 24rpx;
    color: rgba(102, 102, 102, 1);
    text-decoration: line-through;
}


.submit-btn {
    width: 220rpx;
    height: 84rpx;
    background: linear-gradient(360deg, rgba(4, 203, 121, 1) 0%, rgba(73, 220, 142, 1) 100%);
    border-radius: 8rpx;
    font-size: 34rpx;
    color: rgba(255, 255, 255, 1);
}

.select-mask {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.6);
    display: none;
}

.select-mask.spread {
    display: block;
}

.select-mask.spread .scroll-box {
    transform: translateY(0%);
}

.scroll-box {
    height: 60vh;
    transform: translateY(100%);
    transition: all 0.5s;
}

.select-box {
    border-radius: 30rpx 30rpx 0px 0px;
    background-color: #fff;
    padding: 74rpx 40rpx;
    position: absolute;
    left: 0;
    width: 100%;
    bottom: 120rpx;
}

.close-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.select-time {}

.select-hd {
    font-size: 28rpx;
    font-weight: 700;
    line-height: 40rpx;
    padding-bottom: 24rpx;
}

.select-bd {
    padding-bottom: 60rpx;
}

.select-time .time-item {
    width: 600rpx;
    height: 70rpx;
    border-radius: 8rpx;
    border: 1px solid rgba(151, 151, 151, 1);
    font-size: 24rpx;
    color: rgba(102, 102, 102, 1);
    margin-bottom: 26rpx;
    overflow: hidden;
}

.select-time .time-item:last-child {
    margin-bottom: 0;
}

.select-time .time-item.checked {
    background: rgba(73, 220, 142, 1);
    color: #fff;
    border: 0;
}

.select-time .time-item.disabled {
    color: rgba(153, 153, 153, 1);
    border: 1px solid rgba(197, 196, 197, 1);
    position: relative;
}

.select-class .class-item.disabled::after,
.select-time .time-item.disabled::after {
    content: '售罄';
    width: 56rpx;
    line-height: 26rpx;
    text-align: center;
    background: rgba(197, 196, 197, 1);
    border-radius: 0rpx 0px 14rpx 0px;
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    font-size: 16rpx;
    color: rgba(255, 255, 255, 1);
}

.select-class {
    border-bottom: 1px solid #F4F3F3;
    margin-bottom: 20rpx;
}

.select-class .class-item {
    width: 192rpx;
    height: 70rpx;
    border-radius: 8rpx;
    border: 1px solid rgba(151, 151, 151, 1);
    font-size: 24rpx;
    color: rgba(102, 102, 102, 1);
    margin-right: 42rpx;
}

.select-class .class-item:last-child {
    margin-right: 0;
}

.select-class .class-item.checked {
    background: rgba(73, 220, 142, 1);
    color: #fff;
    border: 0;
}

.select-class .class-item.disabled {
    color: rgba(153, 153, 153, 1);
    border: 1px solid rgba(197, 196, 197, 1);
    position: relative;
}

