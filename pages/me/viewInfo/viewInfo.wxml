<view class="container">
    <mp-header isHome="{{isHome}}" showBack cln="''" title="查看信息"></mp-header>
    <view class="content">
        <view class="info-list">
            <view class="info-item flex flex-ver flex-jcsb">
                <view class="item-label">姓名</view>
                <view class="item-txt">{{userInfo.realname}}</view>
            </view>
            <view class="info-item flex flex-ver flex-jcsb">
                <view class="item-label">性别</view>
                <view class="item-txt">{{userInfo.sex==0?'女':'男'}}</view>
            </view>
            <view class="info-item flex flex-ver flex-jcsb">
                <view class="item-label">手机号</view>
                <view class="item-txt">{{userInfo.phone}}</view>
            </view>
        </view>
    </view>
</view>
