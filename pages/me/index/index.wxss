page {
    background: rgba(249, 249, 249, 1);
}

.me-header {
    /* position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 99; */
    position: relative;
}

.me-header .banner-bg {
    width: 100%;

}

.info-box {
    position: absolute;
    top: 50%;
    left: 54rpx;
    transform: translateY(-50%);
    z-index: 2;
}

.avatar-box {
    border-radius: 50%;
    overflow: hidden;
    border: 2rpx solid #04CB79;
    width: 102rpx;
    height: 102rpx;
    flex-shrink: 0;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
}

.info-others {
    padding-left: 34rpx;
}

.info-others-nickname {
    margin-bottom: 22rpx;
}

.nickname {
    font-size: 40rpx;
    font-weight: 700;
    color: rgba(255, 255, 255, 1);
    margin-right: 50rpx;
}

.arrow-icon {
    width: 24rpx;
    height: 24rpx;
}

.info-others-tips {
    padding: 0 20rpx;
    min-width: 106rpx;
    height: 40rpx;
    background: rgba(2, 142, 84, 0.35);
    border-radius: 6rpx;
}

.tip-txt {
    font-size: 20rpx;
    color: rgba(255, 255, 255, 1);
}

.arrow-icon-mini {
    width: 14rpx;
    height: 14rpx;
    margin-left: 4rpx;
}

.vip-icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 8rpx;
}

.tool-bar {
    padding: 20rpx 0rpx 20rpx;
    margin: -200rpx auto 20rpx;
    width: 700rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 14rpx;
    position: relative;
    z-index: 3;
}

.tool-top {
    padding: 0 40rpx;
    padding-bottom: 14rpx;
    border-bottom: 2rpx solid #F6F6F6;
}

.tool-tit {
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
    letter-spacing: 2rpx;
}

.tool-view-all {}

.view-all {
    font-size: 22rpx;
    color: rgba(4, 203, 121, 1);
    line-height: 32rpx;
}

.item-arrow {
    width: 20rpx;
    height: 20rpx;
    margin-left: 16rpx;
}

.tool-tab {
    /* padding-top: 36rpx; */
    padding: 36rpx 10rpx 0;
    
}

.tab-item {
    text-align: center;
    position: relative;
}
.tab-notification{
    width:24rpx;
    height:24rpx;
    position: absolute;
    top: 0;
    right: 0;
    border-radius: 50%;
    background:rgba(252,84,3,1);
    font-size:18rpx;
    color:rgba(255,255,255,1);
}

.tab-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 10rpx;
}

.tab-txt {
    font-size: 22rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 32rpx;
}

.menu-list {
    border-radius: 14rpx;
    width: 700rpx;
    margin: 0 auto;
    background-color: #fff;
    padding: 0 30rpx;
}

.menu-item {
    padding: 30rpx 0;
    position: relative;
    border-bottom: 2rpx solid #F6F6F6;
}

.menu-item .item-icon {
    width: 48rpx;
    height: 48rpx;
}

.menu-item .item-txt {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    letter-spacing: 2rpx;
    padding-left: 26rpx;
}

.menu-item .item-arrow {
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
}
