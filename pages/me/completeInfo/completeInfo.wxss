.input-form {
    padding: 60rpx 50rpx 0;
}

.input-item {
    margin-bottom: 50rpx;
}

.input-item:last-child {
    margin-bottom: 0px;
}

.item-label {
    margin-bottom: 14rpx;
}

.label {
    font-size: 30rpx;
    color: rgba(51, 51, 51, 1);
}

.label-desc {
    font-size: 26rpx;
    color: #999;
}

.item-enter {
    height: 80rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    padding: 0 28rpx;
    position: relative;
    font-size: 28rpx;
    color: #666;
}

.item-enter-gender {
    height: 80rpx;
    font-size: 28rpx;
    color: #666;
}

.arrow-icon {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    top: 50%;
    right: 24rpx;
    transform: translateY(-50%);
}
